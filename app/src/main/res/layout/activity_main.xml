<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <!--
    <TextView
        android:id="@+id/text_title"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.25"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="Capteurs"
        android:padding="10sp"
        android:layout_marginBottom="20sp"
        android:textSize="30sp"/>
    -->

    <LinearLayout
        android:id="@+id/first_row"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="40sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:textAlignment="center"
        android:layout_marginBottom="50px"
        android:gravity="center"
        >
        <LinearLayout
            android:layout_width="300px"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:textAlignment="center"
            android:layout_marginRight="100px"
            android:background="@drawable/rounded_edge"
            android:gravity="center">
            <TextView
                android:id="@+id/name_1"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1"
                android:layout_marginTop="20sp"
                android:textStyle="bold"
                android:textColor="@color/normal_text"
                android:textSize="20sp"/>

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/led_1"
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:srcCompat="@color/led_off"
                android:layout_margin="10dp"
                android:padding="10dp"
                app:strokeWidth="5dp"
                app:strokeColor="@color/black"
                app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize50Percent"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="Value:"
                android:textStyle="bold"
                android:textColor="@color/normal_text"
                android:textSize="20sp"
                />

            <TextView
                android:id="@+id/value_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="@color/normal_text"
                android:layout_marginBottom="20sp"
                android:text="-"
                android:textSize="20sp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="300px"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:textAlignment="center"
            android:background="@drawable/rounded_edge"
            android:gravity="center">

            <TextView
                android:id="@+id/name_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="@color/normal_text"
                android:text="2"
                android:layout_marginTop="20sp"
                android:textStyle="bold"
                android:textSize="20sp"/>

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/led_2"
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:srcCompat="@color/led_off"
                android:layout_margin="10dp"
                android:padding="10dp"
                app:strokeWidth="5dp"
                app:strokeColor="@color/black"
                app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize50Percent"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="Value:"
                android:textStyle="bold"
                android:textColor="@color/normal_text"
                android:textSize="20sp"
                />

            <TextView
                android:id="@+id/value_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="@color/normal_text"
                android:text="-"
                android:layout_marginBottom="20sp"
                android:textSize="20sp"
                />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/second_row"
        app:layout_constraintTop_toBottomOf="@id/first_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60sp"
        android:orientation="horizontal"
        android:textAlignment="center"
        android:gravity="center">

        <LinearLayout
            android:layout_width="300px"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:textAlignment="center"
            android:layout_marginRight="100px"
            android:background="@drawable/rounded_edge"
            android:gravity="center">

            <TextView
                android:id="@+id/name_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="@color/normal_text"
                android:text="3"
                android:layout_marginTop="20sp"
                android:textStyle="bold"
                android:textSize="20sp"/>

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/led_3"
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:srcCompat="@color/led_off"
                android:layout_margin="10dp"
                android:padding="10dp"
                app:strokeWidth="5dp"
                app:strokeColor="@color/black"
                app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize50Percent"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="Value:"
                android:textStyle="bold"
                android:textColor="@color/normal_text"
                android:textSize="20sp"
                />

            <TextView
                android:id="@+id/value_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="@color/normal_text"
                android:text="-"
                android:layout_marginBottom="20sp"
                android:textSize="20sp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="300px"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:textAlignment="center"
            android:background="@drawable/rounded_edge"
            android:gravity="center">

            <TextView
                android:id="@+id/name_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="4"
                android:textAlignment="center"
                android:textStyle="bold"
                android:layout_marginTop="20sp"
                android:textColor="@color/normal_text"
                android:textSize="20sp"/>

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/led_4"
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:srcCompat="@color/led_off"
                android:layout_margin="10dp"
                android:padding="10dp"
                app:strokeWidth="5dp"
                app:strokeColor="@color/black"
                app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize50Percent"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="Value:"
                android:textStyle="bold"
                android:textColor="@color/normal_text"
                android:textSize="20sp"
                />

            <TextView
                android:id="@+id/value_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="@color/normal_text"
                android:text="-"
                android:layout_marginBottom="20sp"
                android:textSize="20sp"
                />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/time"
        app:layout_constraintBottom_toTopOf="@id/obs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginBottom="20sp"
        android:text="-"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/obs"
        app:layout_constraintBottom_toTopOf="@+id/bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginBottom="20sp"
        android:textColor="@color/red"
        android:text="OBS: You should should be connected to TN VPN or EDUROAM."
        android:textSize="12dp"/>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_bar"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/update"
                android:layout_width="0px"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Update"/>

            <Button
                android:id="@+id/configuration"
                android:layout_width="0px"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Configuration"/>
        </LinearLayout>

    </com.google.android.material.bottomnavigation.BottomNavigationView>
</androidx.constraintlayout.widget.ConstraintLayout>